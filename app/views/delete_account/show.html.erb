<div class="container">
  <div class="row">
    <div class="col-xl-4"></div>
    <div class="col-xl-4">
      <h4><%= t(:delete_account) %></h4>
      <%= form_tag(delete_account_path, method: "post") do %>
        <p><%= t(:this_is_serious) %></p>

        <p><%= t(:delete_info) %></p>

        <div class="form-row">
          <div class="form-group col-xl-12">
            <label><%= t(:type_password_to_confirm) %></label>
            <%= password_field_tag(:password_confirmation, "", class: "form-control") %>
          </div>
        </div>

        <p><%= t(:are_you_sure_delete) %></p>

        <div>
          <%= link_to t(:delete_no), account_path, class: 'btn btn-primary' %>
          <%= submit_tag(t(:delete_yes), class: "btn btn-danger") %>
        </div>
      <% end %>
    </div>
  </div>
</div>