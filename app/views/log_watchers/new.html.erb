<div class="container">
  <div class="row">
    <div class="col-xl-4"></div>
    <div class="col-xl-4">
      <h4>Log watchers / New</h4>
      <%= form_for @log_watcher, url: log_watchers_path do |f| %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field(:name, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>File</label>
          <%= f.text_field(:file, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>Action</label>
          <%= f.select(:action, options_for_select(LogWatcher::ACTIONS, selected: @log_watcher.action), {}, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>URL</label>
          <%= f.text_field(:url, class: "form-control") %>
        </div>
        <div>
          <%= f.submit("Submit", class: "btn btn-primary") %>
        </div>
      <% end %>
    </div>
  </div>
</div>