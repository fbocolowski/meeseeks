<div class="container">
  <div class="row">
    <div class="col-xl-4"></div>
    <div class="col-xl-4">
      <h4>Change password</h4>
      <%= form_tag(change_password_path, method: "put") do %>
        <div class="form-group">
          <label>Current password</label>
          <%= password_field_tag(:current_password, "", class: "form-control") %>
        </div>

        <div class="form-group">
          <label>New password</label>
          <%= password_field_tag(:new_password, "", class: "form-control") %>
        </div>

        <div class="form-group">
          <label>Confirm password</label>
          <%= password_field_tag(:new_password_again, "", class: "form-control") %>
        </div>

        <div>
          <%= submit_tag("Submit", class: "btn btn-primary") %>
        </div>
      <% end %>
    </div>
  </div>
</div>