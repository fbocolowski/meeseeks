<div class="container">
  <div class="row">
    <div class="offset-xl-4 col-xl-4">
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="<%= uptime_checks_path %>">Uptime checks</a></li>
          <li class="breadcrumb-item active">New</li>
        </ol>
      </nav>

      <%= form_for @uptime_check, url: uptime_checks_path do |f| %>
        <div class="form-group">
          <label>Target</label>
          <%= f.text_field(:target, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>Action</label>
          <%= f.select(:action, options_for_select(UptimeCheck::ACTIONS, selected: @uptime_check.action), {}, class: "form-control") %>
        </div>
        <div class="form-group">
          <label>URL</label>
          <%= f.text_field(:url, class: "form-control") %>
        </div>
        <div>
          <%= f.submit("Submit", class: "btn btn-primary") %>
        </div>
      <% end %>
    </div>
  </div>
</div>